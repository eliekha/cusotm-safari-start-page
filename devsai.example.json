{
  "version": 1,
  "mcpServers": {
    "slack": {
      "command": "/opt/homebrew/bin/slack-mcp-server",
      "args": [],
      "env": {
        "SLACK_MCP_XOXC_TOKEN": "xoxc-your-token-here",
        "SLACK_MCP_XOXD_TOKEN": "xoxd-your-token-here",
        "SLACK_MCP_ADD_MESSAGE_TOOL": "true"
      },
      "_comment": "Install globally: npm install -g slack-mcp-server"
    },
    "atlassian": {
      "command": "/opt/homebrew/bin/mcp-remote",
      "args": ["https://mcp.atlassian.com/v1/sse"],
      "_comment": "Install globally: npm install -g mcp-remote"
    },
    "gmail": {
      "command": "node",
      "args": ["$HOME/.local/share/briefdesk/gmail-mcp/dist/index.js"],
      "_comment": "Custom read-only Gmail MCP bundled with BriefDesk"
    },
    "github": {
      "command": "$HOME/.local/share/briefdesk/github-mcp-server",
      "args": ["stdio"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "your-github-pat-here"
      },
      "_comment": "Create a PAT at https://github.com/settings/tokens with 'repo' scope for private repos, or 'public_repo' for public only"
    },
    "apple-docs": {
      "disabled": true
    },
    "sentry": {
      "disabled": true
    },
    "chrome-devtools": {
      "disabled": true
    }
  },
  "systemPromptAddition": "This is a Safari start page project that serves as a productivity hub. It integrates with Slack, Jira, Confluence, Google Calendar, Google Drive, and Gmail to help prepare for meetings."
}
